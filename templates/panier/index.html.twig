{% extends 'base.html.twig' %}

{% block title %}Votre panier{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="panier-contenu">
    <!-- Title -->
    <h1 class="mt-4">{{ post.title }}</h1>


    <hr>

    <!-- Date/Time -->
    <p>Disponible depuis le {{ post.registerDate | date('d/m/Y à H:i') }}</p>

    <hr>

    <!-- Preview Image -->
    <img class="img-fluid rounded" src="{{ asset('/photo/' ~ post.image) }}" alt="">

    <hr>

    <!-- Game Category -->
    <p>Style de jeu: {{post.category}}</p>

    <hr>

    <!-- Stock -->
    <p>Nombre en stock: {{post.Stock}}</p>

    <hr>

    <!-- Post Content -->
    <p class="lead">{{ post.content }}</p>

    <hr>

    <!-- Price -->
    <h5>Prix: {{post.price}}</h5>

    

    <hr>
</div>
 <button type="submit" class="Transaction">Passer à la transaction</button>
{% endblock %}
